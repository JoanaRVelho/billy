<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="BillyCoreJPAPersistenceUnit">
		<description>billy persistence unit</description>

<!-- 		<non-jta-data-source>java:/comp/env/jdbc/billy-datasource</non-jta-data-source> -->

		<mapping-file>META-INF/orm-core.xml</mapping-file>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:postgresql://localhost:5432/billy" />
			<property name="javax.persistence.jdbc.user" value="billy" />
			<property name="javax.persistence.jdbc.password" value="billy" />

			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
<!-- 			<property name="hibernate.archive.autodetection" value="class, hbm"/>    -->


			<!-- <property name="hibernate.show_sql" value="true" /> -->
			<!-- <property name="hibernate.hbm2ddl.auto" value="create" /> -->
			<!-- <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" 
				/> -->
		</properties>
	</persistence-unit>

</persistence>
